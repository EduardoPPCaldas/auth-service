{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Docker Container",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "/app",
            "port": 2345,
            "host": "localhost",
            "showLog": true,
            "trace": "verbose"
        },
        {
            "name": "Debug Go in Docker",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/api/main.go",
            "env": {
                "DATABASE_URL": "postgres://postgres:postgres@localhost:5432/authdb?sslmode=disable",
                "PORT": "8080",
                "JWT_SECRET": "${env:JWT_SECRET}",
                "GOOGLE_CLIENT_ID": "${env:GOOGLE_CLIENT_ID}"
            },
            "preLaunchTask": "docker: start debug container"
        }
    ]
}